{% extends 'base.html.twig' %}

{% block title %}Liste des urgences{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des urgences</h1>

        {% if urgences|length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Motif</th>
                        <th>Niveau de gravité</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for urgence in urgences %}
                        <tr>
                            <td>{{ urgence.patient.nom }} {{ urgence.patient.prenom }}</td>
                            <td>{{ urgence.motif }}</td>
                            <td>{{ urgence.niveauGravite }}</td>
                            <td>{{ urgence.statut }}</td>
                            <td>
                                <a href="{{ path('urgence_show', {'id': urgence.id}) }}">Voir</a>
                                <a href="{{ path('urgence_edit', {'id': urgence.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucune urgence enregistrée.</p>
        {% endif %}

        <a href="{{ path('urgence_new') }}">Ajouter une urgence</a>
    </div>
{% endblock %}
