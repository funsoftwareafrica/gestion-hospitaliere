{% extends 'base.html.twig' %}

{% block title %}Inscription Patient{% endblock %}

{% block body %}
    <h1>Inscription Patient</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}  {# Utilisez email au lieu de username #}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.dateNaissance) }}
        {{ form_row(registrationForm.sexe) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.antecedentsMedicaux) }}

        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
