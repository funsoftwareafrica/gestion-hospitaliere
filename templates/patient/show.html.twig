{% extends 'base.html.twig' %}

{% block title %}Détails du patient{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails du patient</h1>

        <p><strong>Nom :</strong> {{ patient.nom }}</p>
        <p><strong>Prénom :</strong> {{ patient.prenom }}</p>
        <p><strong>Date de naissance :</strong> {{ patient.dateNaissance|date('Y-m-d') }}</p>
        <p><strong>Sexe :</strong> {{ patient.sexe }}</p>
        <p><strong>Adresse :</strong> {{ patient.adresse }}</p>
        <p><strong>Téléphone :</strong> {{ patient.telephone }}</p>
        <p><strong>Email:</strong> {{ patient.email }}</p>
        <p><strong>Antécédents médicaux :</strong> {{ patient.antecedentsMedicaux }}</p>

        <a href="{{ path('patient_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
{% endblock %}
